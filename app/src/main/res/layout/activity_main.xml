<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/LinearContainer"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:background="@color/white"
        android:orientation="vertical"/>

        <ImageView
            android:id="@+id/home"
            android:src="@drawable/ic_baseline_home_24_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_above="@+id/home2"/>

        <TextView
            android:id="@+id/home2"
            android:text="Home"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/green"/>

        <ImageView
            android:id="@+id/student"
            android:src="@drawable/ic_baseline_add_box_24"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="185dp"
            android:layout_above="@+id/student2"/>

        <TextView
            android:id="@+id/student2"
            android:text="Add Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="70dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/home2"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/about"
            android:src="@drawable/ic_baseline_notifications_24"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="330dp"
            android:layout_above="@+id/about2"/>

        <TextView
            android:id="@+id/about2"
            android:text="About us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="230dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/home2"
            android:layout_marginBottom="20dp"/>

</RelativeLayout>